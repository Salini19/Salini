            @Html.DisplayFor(modelItem => item.MemberName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountOpenDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxBooksAllowed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Penalty)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditMemberDetails", new { id=item.MemberId }) |
            @Html.ActionLink("Details", "Details", new { id=item.MemberId}) |
